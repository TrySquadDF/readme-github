  "scripts": {
    "build": "nest build",
    "upload:graphql-schema": "rover graph introspect https://api.github.com/graphql --header \"Authorization: Bearer %GH_PERSONAL_ACCESS_TOKEN%\" > ./src/github/schema.graphql",
    "codegen:graphql-types": "graphql-codegen --config codegen.yml",
    "codegen": "pnpm run upload:graphql-schema && pnpm run codegen:graphql-types",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "typecheck": "tsc --noEmit -p tsconfig.build.json",
    "lint": "eslint -c ./eslint.config.js --fix",
    "lint:inspect": "pnpm dlx @eslint/config-inspector"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.10",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.3.10",
    "@nestjs/platform-express": "^10.3.10",
    "apollo-boost": "^0.4.9",
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-link": "^1.2.14",
    "apollo-link-error": "^1.1.13",
    "apollo-link-http": "^1.5.17",
    "graphql": "^16.9.0",
    "graphql-tag": "^2.12.6",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.6.0",
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/typescript": "^4.0.9",
    "@graphql-codegen/typescript-operations": "^4.2.3",
    "@nestjs/cli": "^10.4.2",
    "@nestjs/schematics": "^10.1.2",
    "@stylistic/eslint-plugin": "^2.3.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^9.6.0",
    "globals": "^15.8.0",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript-eslint": "^7.15.0"
  }
